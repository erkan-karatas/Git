@using System.Web.Optimization;
@{
    Layout = ("~/Areas/Admin/Views/Shared/_Layout.cshtml");
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>OgrenciEkle</title>
    @Styles.Render("~/admin/styles")
</head>
<body>
    <div class="panel-heading"></div>
    <div class="col-md-4"></div>

    <div class="col-md-4">
        <div class="panel panel-primary">
            <div class="panel-heading text-center"><b>Öğrenci Ekleme Formu</b></div>
            <div class="panel-body">

                <form role="form" action="admin_ekleme.php" method="post">

                    <div class="form-group">
                        <label>Öğrenci bilgilerini giriniz</label>
                        <input class="form-control" type="text" name="ad" required placeholder="Ad">

                    </div>

                    <div class="form-group">

                        <input class="form-control" type="text" name="soyad" required placeholder="Soyad">

                    </div>

                    <div class="form-group">

                        <input class="form-control" type="text" name="kulad" required placeholder="Bölüm">

                    </div>

                    <div class="form-group">

                        <input class="form-control" type="text" name="kulad" required placeholder="Öğrenci no">

                    </div>

                  

                    <button type="submit" class="btn btn-primary">
                        <span class="glyphicon glyphicon-plus"></span> Öğrenciyi Kaydet
                    </button>

                    <button type="button" onClick="parent.location='admin_listele.php'" class="btn btn-danger">
                        <span class="glyphicon glyphicon-arrow-left"></span> Vazgeç
                    </button>


                </form>
            </div>
        </div>
    </div>
</body>
</html>
