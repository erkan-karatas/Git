@model OgrenciYoklama.Areas.Admin.ViewModels.YoneticilerYoneticiListele
@using System.Web.Optimization;


@{
    ViewBag.Title = "Yonetici Listele";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
 
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
   
    @Styles.Render("~/admin/styles")
</head>
<body>

    <div>
        <div class="panel-heading"></div>
        <div class="col-md-1"></div>
        <div class="col-md-10">

            <div class="panel panel-primary">
                <div class="panel-heading text-center">
                    <b>
                        Yönetici Listesi
                        <button class="btn btn-xs btn-default pull-right">
                            <span class="glyphicon glyphicon-plus"></span> <b>Yeni</b>
                        </button>
                    </b>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    
                                    <th class="text-center mystyle">KULLANICI ADI</th>
                                    <th class="text-center mystyle">İŞLEMLER</th>

                                </tr>
                            </thead>
                            <tbody>


                            @foreach (var Yonetici in @Model.Yoneticiler)
                                {


                                <tr class="default">


                                    
                                    <td class="text-center active"><b>@Yonetici.kullanici_adi</b></td>
                                    <td class="text-center active">

                                        <button type="submit" class="btn btn-xs btn-primary">
                                            <span class="glyphicon glyphicon-edit"></span> <b>Düzenle</b>
                                        </button>

                                        <button type="submit" class="btn btn-xs btn-danger">
                                            <span class="glyphicon glyphicon-trash"></span> <b>Sil</b>
                                        </button>

                                    </td>
                                


                                </tr>
                            }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-1"></div>
    </div>

</body>
</html>
